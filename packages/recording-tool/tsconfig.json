{
  "compilerOptions": {
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "libs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["libs"]
}
