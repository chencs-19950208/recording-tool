{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "baseUrl": "./",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "./dist/",
    // "declarationMap": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "./libs/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}